- title "Sign up"

= simple_form_for resource,
    as: resource_name,
    url: registration_path(resource_name),
    validate: true do |f|

  legend
    | Create your "#{app_config.app_name}" account

  .form-inputs
    = f.input :full_name, required: true, autofocus: true, validate: true
    = f.input :email, required: true, validate: { presence: true, uniqueness: false }
    = f.input :password, required: true, validate: true
    = f.input :password_confirmation, required: true, validate: true

  .form-actions
    = f.button :submit, "Sign up"
    '  or
    = link_to "Sign in", new_session_path(resource_name)


= render "devise/shared/links"
